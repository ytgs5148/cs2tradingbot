{
    "compilerOptions": {
        "target": "ES6",
        "rootDir": "./",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": ["./**/*.ts", "./package.json", "./package-lock.json"]
}
